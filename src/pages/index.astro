const pageTitle = "Frontend Mentor | Pod request access landing page";
---

<BaseLayout pageTitle={pageTitle}>
  <img src='/assets/desktop/logo.svg' alt='Pod logo' />
  <h1>Publish your podcasts <span>everywhere.</span></h1>
  <p>
