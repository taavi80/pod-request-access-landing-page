<form id='accessForm' novalidate>
  <div class='form-container'>
    <input type='email' id='emailInput' placeholder='Email address' />
    <button>Request Access</button>
    <p id='errorMessage' class='error-message'></p>
  </div>
</form>

<style>
  .form-container {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    position: relative;
  }
  input[type="email"] {
    background-color: #2c344b;
    color: #ffffff;
    font-size: 1.3rem;
    padding: 1rem 1.9rem;
    border: none;
    border-radius: 25px;
  }
  input[type="email"]::placeholder {
    font-family: "Chivo";
    font-size: 1rem;
    font-weight: 700;
    color: #5a668a;
  }
  button {
    background-color: #54e6af;
    color: #121725;
    font-family: "Chivo-Light";
    font-size: 1.1rem;
    font-weight: 700;
    padding: 1.1rem 1.9rem;
    border: none;
    border-radius: 25px;
    cursor: pointer;
  }
  button:hover,
  button:active {
    background-color: #b3ffe2;
  }

  .error-message {
    position: absolute;
    top: 100%;
    left: 7%;
    color: #fb3e3e;
    margin-top: 0.5rem;
  }

  @media (min-width: 768px) {
    form {
      order: 1;
    }
    .form-container {
      max-width: 450px;
      flex-direction: initial;
      margin-bottom: 3rem;
      gap: initial;
    }
    input[type="email"] {
      width: 100%;
    }
    button {
      position: absolute;
      top: 50%;
      right: 0;
      transform: translate(-2%, -49%);
      padding: 0.9rem 1.6rem;
    }
  }

  @media (min-width: 1440px) {
    .form-container {
      max-width: 430px;
    }
  }
</style>

<script>
  function validateEmail() {
    const emailInput = document.getElementById("emailInput") as HTMLInputElement;
    const errorMessage = document.getElementById("errorMessage");

    const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;

    errorMessage.textContent = emailRegex.test(emailInput.value)
      ? ""
      : "Oops! Please check your email";
  }

  // Clearing the error message when typing
  const emailInput = document.getElementById("emailInput");
  emailInput.addEventListener("input", () => {
    const errorMessage = document.getElementById("errorMessage");
    errorMessage.textContent = "";
  });

  // Added event listener for preventing the default behavior
  const accessForm = document.getElementById("accessForm");
  accessForm.addEventListener("submit", (event) => {
    event.preventDefault();
    validateEmail();
  });
</script>
